{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "inlineSources": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noEmitHelpers": false,

    "lib": [
      "es6",
      "dom"
    ],
    "types": [
      "jasmine",
      "node"
    ]
  },
  "files": [
    "index.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "angularCompilerOptions": {
    "genDir": "build",
    "skipMetadataEmit": true,
    "entryModule": "./ngxcreditcard.module#AppModule"
  }
}
